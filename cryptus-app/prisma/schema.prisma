generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_PROD")
}

model User {
  id          String   @id @default(uuid())
  email       String   @unique
  username    String   @unique
  displayName String
  nfts_order  Int[]
  description String
  views       Int
  likes       Int
  hash        String
  wallets     Wallet[]
  nfts        Nft[]
}

model Nft {
  id               String  @id @default(uuid())
  name             String
  description      String?
  collection       String? //Collection @relation(fields: [collectionId], references: [id])
  collection_address String?
  collection_size  Int?
  token_id         String
  rarity_rank      Int?
  external_url     String?
  image_url        String?
  userId           String?
  User             User?   @relation(fields: [userId], references: [id])
  properties       String
  last_sale_price  Int?
  last_sale_symbol String?
}

