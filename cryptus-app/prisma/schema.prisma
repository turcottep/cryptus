// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String   @id @default(uuid())
  email       String   @unique
  username    String   @unique
  displayName String
  nfts_order  Int[]
  description String
  views       Int
  likes       Int
  wallets     Wallet[]
  profile_pic Nft[]
  hash        String
}

model Nft {
  id                String   @id @default(uuid())
  description       String?
  collection        String?
  tags              String[]
  blockchain_id     String?
  blockchain_wallet String?
  external_url      String?
  User              User?    @relation(fields: [userId], references: [id])
  userId            String?
}

model Wallet {
  id                String  @id @default(uuid())
  blockchain_id     String?
  blockchain_wallet String?
  external_url      String?
  User              User?   @relation(fields: [userId], references: [id])
  userId            String?
}
