{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/api/auth/[...nextauth].ts",
    "pages/index.tsx",
    "pages/login.tsx",
    "pages/loginpage2.jsx",
    "components/user_form/UserDetails.jsx",
    "components/user_form/UserDetails.jsx"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
