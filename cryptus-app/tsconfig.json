{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/api/auth/[...nextauth].ts",
    "pages/index.tsx",
    "pages/loginpage.tsx",
    "pages/loginpage2.jsx",
    "components/UserForm/UserDetails.jsx",
    "components/UserForm/UserDetails.jsx",
    "__tests__/emailTest.spec.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
